<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/track_image"
        android:layout_width="@dimen/track_image_size"
        android:layout_height="@dimen/track_image_size"
        android:layout_marginVertical="@dimen/track_image_margin_vertical"
        android:layout_marginStart="@dimen/track_image_margin_start"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/track_text_margin_vertical"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/track_text_margin_horizontal"
        >
        <TextView
            android:id="@+id/track_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Smells Like Teen Spirit (Remastered asdfasdfasdfasdf"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="The Beatles"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/customColorValue"
                android:textSize="@dimen/small_text_size"
                android:ellipsize="end"
                android:maxLines="1"
                app:drawableEndCompat="@drawable/dot"
                />
            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2:10"
                android:maxLines="1"
                android:textColor="?attr/customColorValue"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/small_text_size"/>
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/track_icon_size"
        android:layout_height="@dimen/track_icon_size"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/track_icon_margin_end"
        android:src="@drawable/arrow_forward" />


</LinearLayout>