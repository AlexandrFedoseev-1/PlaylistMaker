<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SearchActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/placeholder_button_text_size</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    <style name="AudioPlayerTextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="AudioPlayerTextInfoChanged">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AudioPlayerTextNameAndArtist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="contentInsetStart">@dimen/zero</item>
        <item name="contentInsetStartWithNavigation">@dimen/contentInsetStartWithNavigation</item>
        <item name="navigationIcon">@drawable/arrow_back</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>