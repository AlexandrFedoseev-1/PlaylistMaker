<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="LittleButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/placeholder_button_margin_top</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/placeholder_button_text_size</item>
        <item name="android:insetTop">@dimen/zero</item>
        <item name="android:insetBottom">@dimen/zero</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="AudioPlayerTextInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="AudioPlayerTextInfoChanged">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/track_info_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayerTextNameAndArtist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/head_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/head_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tabLayout_height</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TabLayoutTextStyle</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/tabLayout_text_size</item>
    </style>

    <style name="PlaceholderTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/bnv_text_size</item>
    </style>

    <style name="AddPlaylistInputTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/padding</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/box_stroke_color_add_playlist</item>
        <item name="hintTextColor">@color/input_hint_color</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="cursorColor">?attr/colorOnPrimary</item>
    </style>
    <style name="HintTextStyle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/bnv_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="AddPlaylistInputTextStyle.InputEditText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="cursorColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CreatePlaylistButtonStyle" parent ="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/playlist_create</item>
        <item name="android:background">@drawable/create_playlist_button</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="PlaylistItem">
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>